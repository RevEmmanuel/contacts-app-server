{
  "swagger": "2.0",
  "info": {
    "title": "My Node.js API",
    "description": "This is a simple Node.js API.",
    "version": "1.0.0"
  },
  "paths": {
    "/users": {
      "get": {
        "summary": "Get all users.",
        "responses": {
          "200": {
            "description": "A list of users."
          }
        }
      },
      "post": {
        "summary": "Create a new user.",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "The newly created user."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
